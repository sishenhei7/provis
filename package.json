{
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "pnpm -r --filter=./packages/** run build",
    "dev": "pnpm -r --filter=./packages/** --parallel run dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.8.0",
    "@antfu/ni": "^0.21.12",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^0.1.0",
    "lint-staged": "^15.2.2",
    "pnpm": "^8.15.4",
    "simple-git-hooks": "^2.10.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "zx": "^7.2.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "**/*.{js,ts,vue,json}": [
      "eslint --fix --cache"
    ]
  }
}
